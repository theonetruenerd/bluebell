<category name="Bluebell" colour="#a2a2d0" css-icon="customIcon fa-solid fa-flask">
    <label text="Bluebell"/>
    <block type="import_bluebell" />
    <block type="aspirate" />
    <block type="dispense" />

    <block type="distribute_liquid">
        <value name="volume">
            <shadow type="parameters">
                <mutation color="#4a4b5f" items="1" limit="1" inputType="float" />
                <value name="input_1">
                    <block type="float">
                        <field name="volume">Volume</field>
                    </block>
                </value>
            </shadow>
        </value>
        <value name="source">
            <shadow type="parameters">
                <mutation color="#4a4b5f" items="1" limit="1" inputType="string" />
                <value name="input_2">
                    <block type="inline_string">
                        <field name="source">Source</field>
                    </block>
                </value>
            </shadow>
        </value>
    </block>
</category>